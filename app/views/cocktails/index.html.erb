<div class="banner" style="background-image: url('<%= image_path 'cocktails.jpg' %>');">
  <div class="banner-content">
    <h1>Nicola's cocktails</h1>
    <p> beverages </p>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card" style= url('https://source.unsplash.com/500x400/?cocktail');">
                      <h2> <%= link_to cocktail.name, cocktail_path(cocktail), class: 'card-link' %></h2>

          <div class="card-description">
            <%= link_to cocktail_path(cocktail), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
            <% end %>
         </div>

        </div>
      </div>
    <% end %>
  </div>
  </div>
</div>

